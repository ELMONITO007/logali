<mvc:View
    controllerName="logaligroup.employees.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
                <Text ></Text>
				<content>
                
                <HBox >
                <Label text="{i18n>labelEmployeed}" id="labelEmployeed" class="sapUiSmallMargin" labelFor="imputEmployeed" />
                <Input  id="imputEmployeed" maxLength="10" width="200px"  class="sapUiSmallMarginEnd" liveChange="onValidate"/>
                <Label text="{i18n>labelCountry}" id="labelCountry" class="sapUiSmallMargin" labelFor="slCountry" visible="false" />
                <Select id="slCountry" forceSelection="false" visible="false">
                <items>
                <core:Item key="US" text="{i18n>countryUS}" />
                <core:Item key="UK" text="{i18n>countryUK}" />
                
                <core:Item key="ES" text="{i18n>countryES}" />

                </items>
                
                
                </Select>
                </HBox>
                </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
